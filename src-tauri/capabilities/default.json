{
  "$schema": "https://schema.tauri.app/config/v2/capability",
  "identifier": "default",
  "description": "Default permissions for the application",
  "windows": ["*"],
  "permissions": [
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "core:path:default",
    "shell:allow-open",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://api.star-citizen.wiki/*" },
        { "url": "https://status.robertsspaceindustries.com/*" }
      ]
    },
    {
      "identifier": "fs:default",
      "allow": [
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$APPDATA/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$APPDATA/**" }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        { "path": "**" }
      ]
    }
  ]
}